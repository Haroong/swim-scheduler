# ===================================================================
# 개발 환경 설정 (.env.dev)
# ===================================================================

# 환경 설정
ENV=dev
DEBUG=true

# LLM 설정
ANTHROPIC_API_KEY=sk-ant-xxxxx
LLM_MODEL=claude-3-5-haiku-20241022
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.0

# Database 설정
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_dev_password
DB_NAME=swim_scheduler_dev
DB_CHARSET=utf8mb4

# Connection Pool 설정
DB_POOL_SIZE=5
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# 크롤링 설정
CRAWL_MAX_PAGES=3
CRAWL_MAX_FILES=5
CRAWL_DELAY_SECONDS=0.5

# HTTP 설정
HTTP_TIMEOUT=30
HTTP_MAX_RETRIES=3

# 로깅 설정
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_FILE_ENABLED=true
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5
