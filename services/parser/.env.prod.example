# ===================================================================
# 프로덕션 환경 설정 (.env.prod)
# ===================================================================

# 환경 설정
ENV=prod
DEBUG=false

# LLM 설정
ANTHROPIC_API_KEY=sk-ant-xxxxx
LLM_MODEL=claude-3-5-haiku-20241022
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.0

# Database 설정
DB_HOST=prod-db.example.com
DB_PORT=3306
DB_USER=swim_app
DB_PASSWORD=your_prod_password_here
DB_NAME=swim_scheduler
DB_CHARSET=utf8mb4

# Connection Pool 설정
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# 크롤링 설정
CRAWL_MAX_PAGES=10
CRAWL_MAX_FILES=20
CRAWL_DELAY_SECONDS=1.0

# HTTP 설정
HTTP_TIMEOUT=60
HTTP_MAX_RETRIES=5

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_MAX_BYTES=52428800
LOG_FILE_BACKUP_COUNT=10
